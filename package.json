{
  "name": "__app_name__",
  "version": "1.0.0",
  "app": {
    "name": "app",
    "description": "A super duper app",
    "host": "marioslab.io",
    "hostDir": "/home/badlogic",
    "serverPort": 3333,
    "domain": "app.io",
    "email": "badlogicgames@gmail.com"
  },
  "scripts": {
    "prepare": "husky install",
    "format": "npx prettier --write .",
    "clean": "rimraf html/build",
    "build:css": "npx tailwindcss -i html/styles.css -o html/build/styles-bundle.css",
    "build:site": "node ./esbuild.site.mjs",
    "build:server": "node ./esbuild.server.mjs",
    "dev": "concurrently \"npx tsc --noEmit --preserveWatchOutput --watch\" \"npm run build:site -- --watch\" \"npm run build:css -- --watch\" \"npm run build:server -- --watch\" \"./docker/control.sh startdev\"",
    "build": "npm run build:css && npm run build:site && npm run build:server"
  },
  "license": "MIT",
