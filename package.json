    "express": "^4.18.2",
    "form-data": "^4.0.0",
    "husky": "^8.0.3",
    "lit": "^2.8.0",
    "multer": "^1.4.5-lts.1",
    "path-to-regexp": "^6.2.1",
    "pg": "^8.11.3",
    "remixicon": "^3.5.0",
    "tailwindcss-animated": "^1.0.1",
    "typescript": "^5.2.2",
    "ws": "^8.14.2"
  },
  "devDependencies": {
